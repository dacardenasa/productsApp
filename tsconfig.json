{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@adapters/*": ["src/adapters/*"],
            "@components/*": ["src/components/*"],
            "@context/*": ["src/context/*"],
            "@helpers/*": ["src/helpers/*"],
            "@hooks/*": ["src/hooks/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@navigation/*": ["src/navigation/*"],
            "@providers/*": ["src/providers/*"],
            "@screens/*": ["src/screens/*"],
            "@services/*": ["src/services/*"],
            "@theme/*": ["src/theme/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["__tests__/**/*-test.ts"]
}
